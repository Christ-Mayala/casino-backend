# Server runtime
NODE_ENV=development
PORT=5000

# MongoDB (obligatoire)
# URI Atlas ou autre (ex: mongodb+srv://user:pass@cluster/dbname)
MONGO_URI=
# (Optionnel) Nom de la base utilisé par Mongoose/legacy
MONGODB_DB_NAME=super-u

# Auth (obligatoire)
# Secret JWT pour signer les tokens d’accès
JWT_SECRET=

# CORS (optionnel mais recommandé en dev)
# Domaines autorisés à appeler votre API
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend (obligatoire pour les liens e-mail, redirections, etc.)
# URL publique du site client
FRONTEND_URL=http://localhost:3000

# Lygos (paiement)
# Clé API fournie par Lygos (obligatoire pour initier un paiement)
LYGOS_API_KEY=
# Base URL de l’API Lygos (sandbox ou prod) — ex: https://api.lygos.xxx (obligatoire)
LYGOS_BASE_URL=
# Secret de signature des webhooks configuré côté Lygos (obligatoire pour valider les webhooks)
LYGOS_WEBHOOK_SECRET=
# (Optionnel) Identifiant marchand si requis par votre compte
LYGOS_MERCHANT_ID=
# (Optionnel) Channel par défaut; laissez vide pour "laisser Lygos décider"
LYGOS_CHANNEL=
# (Optionnel) Chemin de création de transaction (par défaut /v1/transactions)
LYGOS_CREATE_PATH=/v1/transactions
# (Optionnel) Convertir le montant en "minor units" (ex: centimes) true/false
LYGOS_AMOUNT_MINOR_UNITS=false

# E-mails (optionnel, requis pour mot de passe oublié)
# Compte Gmail + mot de passe d’application (2FA nécessaire)
GMAIL_USER=
GMAIL_APP_PASSWORD=

# SMS (optionnel)
SMS_TO_API_KEY=

# Cloudinary (optionnel, upload images)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
